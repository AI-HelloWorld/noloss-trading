# ============================================
# AI Cryptocurrency Trading Platform - Environment Variables
# ============================================
# 
# Instructions:
# 1. Copy this file and rename to .env
# 2. Fill in your real API keys
# 3. Never commit .env file to Git!
#

# ==================== API Keys ====================

# Aster DEX Exchange API (Required)
# Get from: https://asterdex.com/api
ASTER_DEX_API_KEY=your_aster_dex_api_key_here
ASTER_DEX_API_SECRET=your_aster_dex_api_secret_here

# OpenAI GPT-4 API (For Technical, Fundamental, Risk Management, Portfolio Manager)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your_openai_api_key_here

# Anthropic Claude API (Optional, future integration)
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# DeepSeek API (For Sentiment Analyst)
# Get from: https://platform.deepseek.com/
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# Grok API (For News Analyst)
# Get from: https://x.ai/
GROK_API_KEY=your_grok_api_key_here

# ==================== Database Config ====================

# SQLite database path (Development)
DATABASE_URL=sqlite+aiosqlite:///./trading_platform.db

# PostgreSQL (Recommended for Production)
# DATABASE_URL=postgresql+asyncpg://user:password@localhost/trading_db

# ==================== Application Config ====================

# Server host and port
APP_HOST=0.0.0.0
APP_PORT=8000

# Debug mode (Set to False in production)
DEBUG_MODE=False

# ==================== Trading Config ====================

# Initial balance (USD)
INITIAL_BALANCE=10000.0

# Max position size per trade (0.1 = 10% of total balance)
MAX_POSITION_SIZE=0.1

# Risk per trade (0.02 = 2%)
RISK_PER_TRADE=0.02

# Enable auto trading
# True: Automatically execute AI decisions
# False: Only show decisions without execution (Recommended for testing)
ENABLE_AUTO_TRADING=True

# ==================== Update Frequency (seconds) ====================

# Data update interval (seconds) - Frontend refresh rate
DATA_UPDATE_INTERVAL=60

# Trading check interval (seconds) - AI analysis frequency
# Recommended: 300 seconds (5 minutes) or more to avoid overtrading
TRADE_CHECK_INTERVAL=300

# ==================== Optional: External API Integration ====================

# Twitter API (For sentiment analysis)
# TWITTER_API_KEY=your_twitter_api_key
# TWITTER_API_SECRET=your_twitter_api_secret

# News API (For news analysis)
# NEWS_API_KEY=your_news_api_key

# CoinGecko API (For market data)
# COINGECKO_API_KEY=your_coingecko_api_key

# ==================== Advanced Config ====================

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Max concurrent trades
MAX_CONCURRENT_TRADES=3

# Risk score threshold (0-1, risk manager may veto if exceeded)
RISK_THRESHOLD=0.7

# AI confidence threshold (0-1, don't execute if below)
CONFIDENCE_THRESHOLD=0.7

# ==================== Security Reminders ====================
# 
# IMPORTANT SECURITY TIPS:
# 1. Never commit the renamed .env file to Git
# 2. Don't share your API keys publicly
# 3. Rotate API keys regularly
# 4. Use environment variables or secret management services
# 5. Use strong passwords and HTTPS in production
# 
# ============================================