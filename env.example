# AI加密货币交易平台 - 环境变量配置模板
# 复制此文件为 .env 并填写您的实际配置

# ===========================================
# 交易所API配置（真实交易时需要）
# ===========================================
ASTER_DEX_API_KEY=
ASTER_DEX_API_SECRET=

# ===========================================
# AI模型API配置（至少配置DeepSeek）
# ===========================================
DEEPSEEK_API_KEY=sk-your-deepseek-key-here
QWEN_API_KEY=
OPENAI_API_KEY=
GROK_API_KEY=

# ===========================================
# 应用配置
# ===========================================
APP_HOST=0.0.0.0
APP_PORT=8001
DEBUG_MODE=false

# ===========================================
# 数据库配置
# ===========================================
DATABASE_URL=sqlite+aiosqlite:///app/data/trading_platform.db

# ===========================================
# 交易配置
# ===========================================
INITIAL_BALANCE=1000.0
MAX_POSITION_SIZE=0.1
RISK_PER_TRADE=0.02
ENABLE_AUTO_TRADING=true

# ===========================================
# 风控配置 - 防爆仓
# ===========================================
MAX_WALLET_USAGE=0.5
MARGIN_RESERVE_RATIO=0.3
RISK_THRESHOLD=0.7
CONFIDENCE_THRESHOLD=0.6

# ===========================================
# 更新频率（秒）
# ===========================================
DATA_UPDATE_INTERVAL=60
TRADE_CHECK_INTERVAL=300

# ===========================================
# 新闻API配置
# ===========================================
NEWS_API_URL=

